{
  "name": "direction-controller",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"yarn build:client --watch\" \"yarn dev:server\"",
    "dev:client": "webpack --config ./webpack.config.client.js --watch",
    "dev:server": "nodemon --watch src --delay 1 --exec 'ts-node' src/server/index.ts",
    "build": "yarn build:client && yarn build:server",
    "build:client": "webpack --config ./webpack.config.client.js",
    "build:server": "webpack --config ./webpack.config.server.js",
    "test": "jest"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.28.1",
    "@testing-library/jest-dom": "^5.11.6",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.15",
    "@types/jsdom": "^16.2.5",
    "bufferutil": "^4.0.3",
    "concurrently": "^5.3.0",
    "express": "^4.17.1",
    "jest": "^26.6.3",
    "jsdom": "^16.4.0",
    "nodemon": "^2.0.7",
    "socket.io": "^3.1.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2",
    "utf-8-validate": "^5.0.4",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "socket.io-client": "^3.1.1"
  }
}
